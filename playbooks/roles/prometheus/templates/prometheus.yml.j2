# my global config
global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_evaluation_interval }}
  scrape_timeout: {{ prometheus_scrape_timeout }}
  external_labels:
    monitor: {{ prometheus_container_name }}

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: {{ prometheus_job_prometheus_targets.split(',') }}

  - job_name: kafka
    static_configs:
      - targets: {{ prometheus_job_kafka_targets.split(',') }}
